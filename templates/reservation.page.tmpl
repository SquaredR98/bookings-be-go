{{ template "base" . }}

<div class="w-full md:w-8/12 xl:w-1/3 mx-auto">
  <h1 class="text-4xl font-bold text-center my-4">Make Reservation</h1>
  <form class="border p-8 rounded-md shadow-lg">
    <div>
      <label hidden class="text-xl" for="name">Full Name</label>
      <input class="w-full border py-2 text-xl px-4 my-2 rounded-full" id="name" type="text" name="name" placeholder="Full Name" />
    </div>
    <div>
      <label hidden class="text-xl" for="email">Email</label>
      <input class="w-full border py-2 text-xl px-4 my-2 rounded-full" id="email" type="email" name="email" placeholder="Email" />
    </div>
    <div>
      <label hidden class="text-xl" for="mobile">Mobile</label>
      <input class="w-full border py-2 text-xl px-4 my-2 rounded-full" id="mobile" type="tel" name="mobile" placeholder="Mobile" />
    </div>
    <button class="bg-slate-800 w-full py-3 text-slate-50 rounded-full mt-4" type="submit">Make Reservation</button>
  </form>
</div>